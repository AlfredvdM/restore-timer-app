{
  "name": "restore-consultation-timer",
  "version": "1.1.0",
  "type": "module",
  "description": "RESTORE Health and Care Consultation Timer",
  "author": "RESTORE Health and Care",
  "productName": "RESTORE Timer",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:convex": "convex dev",
    "build": "tsc && vite build",
    "build:mac": "npm run build && electron-builder --mac",
    "build:win": "npm run build && electron-builder --win",
    "preview": "vite preview",
    "predev": "convex dev --once"
  },
  "build": {
    "appId": "co.za.restorecare.timer",
    "productName": "RESTORE Timer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.medical",
      "icon": "build/icon.icns"
    },
    "dmg": {
      "title": "RESTORE Timer",
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": null,
      "uninstallerIcon": null,
      "installerHeaderIcon": null
    }
  },
  "dependencies": {
    "convex": "1.31.7",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.17.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "~5.0.3",
    "vite": "^6.4.1",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.0",
    "vitest": "^4.0.18"
  }
}
